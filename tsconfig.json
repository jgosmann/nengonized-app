{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "./src",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es7", "dom"],
    "noImplicitAny": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
